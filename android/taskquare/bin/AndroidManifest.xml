<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.charcade.taskquare"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.charcade.taskquare.taskListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.charcade.taskquare.taskDetailActivity"
            android:label="@string/title_task_detail"
            android:parentActivityName=".taskListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".taskListActivity" />
        </activity>
    </application>

</manifest>
